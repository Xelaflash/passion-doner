<div class="container">
  <div class="row">
    <div class="col-lg-6 col-md-10 mx-auto">
      <%= simple_form_for(@kebab) do |k| %>
        <div class="wrap-input">
          <%= k.input :name, input_html: {class: 'form-inputs kebab_new_inputs'}, placeholder: "Kebab's Delight" %>
        </div>
        <div class="wrap-input"> <%= k.input :address, input_html: {class: 'form-inputs kebab_new_inputs'}, placeholder: "75 cours de verdun 75008 Paris" %></div>
        <div class="wrap-input">
          <%= k.input :bread_category_list, as: :check_boxes, collection: [ "Galette", "Pita", "Pain", "Turc" ], input_html: {class: 'form-check form-check-inline'}, label: "Bread Category" %>
        </div>
        <div class="wrap-input">
          <%= k.input :description, input_html: {class: 'form-inputs', id:'text-input'}, label: "Description"%>
        </div>
        <div class="photo-wrapper">
          <%= k.input :photo, input_html: { class: 'd-none' , id: 'photo-input'}, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload a photo' %>
          <%= image_tag "", width: 300, class: "hidden", id: "photo-preview" %>
        </div>
        <%= k.submit class: 'btn-kebab_new' %>
      <% end %>
    </div>
  </div>
</div>
