<%= simple_form_for(@kebab) do |k| %>
  <div class="form-group">
    <%= k.label :name %>
    <%= k.input :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= k.label :address %>
    <%= k.input :address, class: 'form-control' %>
    <%= k.label :description %>
    <%= k.input :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= k.input :photo, as: :file %>
  </div>
  <%= k.submit class: 'btn btn-success' %>
<% end %>
