<nav class="main-navbar stroke">
  <div class="logo">
    <%= link_to root_path do %>
      <%= image_tag "logo.jpg" %>
    <% end %>
  </div>
  <div class="d-none d-sm-block">
    <% if user_signed_in? %>
      <ul>
        <li><%= link_to t(".profile", default: "My account"), edit_user_registration_path, class: "navbar-item navbar-link" %></li>
        <li> <%= link_to t(".sign_out", default: "Log out"),destroy_user_session_path, method: :delete, class: "navbar-item navbar-link" %></li>
      </ul>
    <% else %>
      <!-- Login link (when logged out) -->
      <div>
        <ul>
          <li> <%= link_to t(".sign_in", default: "Log in"), new_user_session_path, class: "navbar-item navbar-link" %></li>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="dropdown d-block d-sm-none">
    <i class="fas fa-bars" id="navbarDropdown" data-toggle="dropdown"></i>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
      <% if user_signed_in? %>
        <%= link_to t(".profile", default: "My account"),edit_user_registration_path, class: "dropdown-item" %>
        <%= link_to t(".sign_out", default: "Log out"),destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      <% else %>
        <%= link_to "Log in", new_user_session_path, class: "dropdown-item"%>
      <% end %>
    </div>
  </div>
</nav>
