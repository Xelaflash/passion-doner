<nav class="main-navbar stroke">
  <div class="logo">
    <%= link_to root_path do %>
      <%= image_tag "logo.jpg" %>
    <% end %>
  </div>
  <div class="nav-flex-right">
    <button class="color_btn light--hidden" aria-label='Toggle Light mode'>
      <i class="fas fa-sun"></i>
      Light Mode
    </button>
    <button class="color_btn dark--hidden" aria-label='Toggle dark mode'>
      <i class="fas fa-moon"></i>
      Dark Mode
    </button>
    <div class="d-none d-sm-block">
      <div class="links-section">
        <% if user_signed_in? %>
          <%= link_to t(".profile", default: "My account"), edit_user_registration_path, class: "navbar-item navbar-link" %>
          <%= link_to t(".sign_out", default: "Log out"),destroy_user_session_path, method: :delete, class: "navbar-item navbar-link" %>
        <% else %>
          <!-- Login link (when logged out) -->
          <%= link_to t(".sign_in", default: "Log in"), new_user_session_path, class: "navbar-item navbar-link" %>
        <% end %>
      </div>
    </div>
    <div class="dropdown d-block d-sm-none">
      <i class="fas fa-bars" id="navbarDropdown" data-toggle="dropdown"></i>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <% if user_signed_in? %>
          <%= link_to t(".profile", default: "My account"),edit_user_registration_path, class: "dropdown-item" %>
          <%= link_to t(".sign_out", default: "Log out"),destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        <% else %>
          <%= link_to "Log in", new_user_session_path, class: "dropdown-item"%>
        <% end %>
      </div>
    </div>
  </div>
</nav>
